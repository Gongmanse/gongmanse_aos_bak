<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation"
    app:startDestination="@id/emptyFragment">

    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.gongmanse.app.feature.main.EmptyFragment"
        android:label="EmptyFragment">

        <action
            android:id="@+id/action_emptyFragment_to_myNotificationFragment"
            app:destination="@id/myNotificationFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_myActivityFragment"
            app:destination="@id/myActivityFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_myScheduleFragment"
            app:destination="@id/myScheduleFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_whatIsGongmanseFragment"
            app:destination="@id/whatIsGongmanseFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_noticeFragment"
            app:destination="@id/noticeFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_customerServiceFragment"
            app:destination="@id/customerServiceFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_updateProfileFragment"
            app:destination="@id/updateProfileFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_purchaseTicketFragment"
            app:destination="@id/purchaseTicketFragment" />

    </fragment>

    <fragment
        android:id="@+id/myNotificationFragment"
        android:name="com.gongmanse.app.feature.notification.MyNotificationFragment"
        android:label="@string/nav_my_notification" />

    <fragment
        android:id="@+id/myActivityFragment"
        android:name="com.gongmanse.app.feature.active.MyActivityFragment"
        android:label="@string/nav_my_activity" />

    <fragment
        android:id="@+id/myScheduleFragment"
        android:name="com.gongmanse.app.feature.schedule.MyScheduleFragment"
        android:label="@string/nav_my_schedule" />

    <fragment
        android:id="@+id/whatIsGongmanseFragment"
        android:name="com.gongmanse.app.feature.whats.WhatIsGongmanseFragment"
        android:label="@string/nav_what_is_gongmanse" />

    <fragment
        android:id="@+id/noticeFragment"
        android:name="com.gongmanse.app.feature.notice.NoticeFragment"
        android:label="@string/nav_notice" />

    <fragment
        android:id="@+id/customerServiceFragment"
        android:name="com.gongmanse.app.feature.customer.CustomerServiceFragment"
        android:label="@string/nav_customer_service" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.gongmanse.app.feature.settings.SettingsFragment"
        android:label="@string/nav_settings" />

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.gongmanse.app.feature.member.SignUpFragment"
        android:label="@string/nav_sign_up" />

    <fragment
        android:id="@+id/updateProfileFragment"
        android:name="com.gongmanse.app.feature.member.UpdateProfileFragment"
        android:label="@string/nav_update_profile" />

    <fragment
        android:id="@+id/purchaseTicketFragment"
        android:name="com.gongmanse.app.feature.member.PurchaseTicketFragment"
        android:label="@string/nav_purchase_ticket" />

</navigation>