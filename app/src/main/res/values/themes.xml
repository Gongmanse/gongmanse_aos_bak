<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gongmanse2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation Menu Item Font theme. -->
    <style name="Navigation.Item" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black</item>
    </style>

    <!-- Full screen theme. -->
    <style name="Theme.Gongmanse2.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Nanum Square Round B -->
    <style name="NanumSquareRoundB" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <!-- Nanum Square Round EB -->
    <style name="NanumSquareRoundEB" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_eb</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <!-- Nanum Square Round L -->
    <style name="NanumSquareRoundL" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_l</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <!-- Nanum Square Round R -->
    <style name="NanumSquareRoundR" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_square_round_r</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <!-- Appbar Title Style -->
    <style name="NanumSquareRoundEB.AppbarTitle">
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- BottomNavigationView Inactive -->
    <style name="NanumSquareRoundB.BottomNavigation" parent="TextAppearance.AppCompat.Caption">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- BottomNavigationView Active -->
    <style name="NanumSquareRoundB.BottomNavigation.Active">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Navigation Header Nickname -->
    <style name="NavigationHeaderNickname" parent="NanumSquareRoundB">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Navigation Header Nickname -->
    <style name="NavigationHeaderGrade" parent="NanumSquareRoundR">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Navigation Header Button -->
    <style name="NavigationHeaderButton" parent="NanumSquareRoundB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationHeaderTicketText" parent="NanumSquareRoundB">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="NavigationHeaderTicketButton" parent="NanumSquareRoundB">
        <item name="android:textColor">@color/light_black2</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- TabLayout theme. -->
    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Tab Item -->
    <style name="NanumSquareRoundB.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- FormInputLayout -->
    <style name="NanumSquareRoundB.FormInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout</item>
        <item name="startIconTint">@color/selector_text_input_layout</item>
        <item name="endIconTint">@color/selector_text_input_layout</item>
        <item name="hintTextColor">@color/selector_text_input_layout</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- FormTextInputLayout -->
    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">10sp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout</item>
        <item name="startIconTint">@color/selector_text_input_layout</item>
        <item name="endIconTint">@color/selector_text_input_layout</item>
        <item name="hintTextColor">@color/selector_text_input_layout</item>
        <item name="boxCornerRadiusTopStart">@dimen/txt_input_layout_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/txt_input_layout_radius</item>
    </style>

    <style name="FormTextInputLayout.Disabled">
        <item name="android:enabled">false</item>
    </style>

    <style name="FormTextInputLayout.Username">
        <item name="android:hint">@string/prompt_username</item>
        <item name="startIconDrawable">@drawable/ic_username_gray</item>
        <item name="startIconContentDescription">@string/desc_image_username</item>
    </style>

    <style name="FormTextInputLayout.Username.Disabled">
        <item name="android:enabled">false</item>
    </style>

    <style name="FormTextInputLayout.Password">
        <item name="android:hint">@string/prompt_password</item>
        <item name="startIconDrawable">@drawable/ic_password_gray</item>
        <item name="startIconContentDescription">@string/desc_image_password</item>
    </style>

    <style name="FormTextInputLayout.PasswordConfirm">
        <item name="android:hint">@string/prompt_password_confirm</item>
        <item name="startIconDrawable">@drawable/ic_password_gray</item>
        <item name="startIconContentDescription">@string/desc_image_password</item>
    </style>

    <style name="FormTextInputLayout.Name">
        <item name="android:hint">@string/prompt_name</item>
        <item name="startIconDrawable">@drawable/ic_name_gray</item>
        <item name="startIconContentDescription">@string/desc_image_name</item>
    </style>

    <style name="FormTextInputLayout.Name.Disabled">
        <item name="android:enabled">false</item>
    </style>

    <style name="FormTextInputLayout.Nickname">
        <item name="android:hint">@string/prompt_nickname</item>
        <item name="startIconDrawable">@drawable/ic_nickname_gray</item>
        <item name="startIconContentDescription">@string/desc_image_nickname</item>
    </style>

    <style name="FormTextInputLayout.Email">
        <item name="android:hint">@string/prompt_email</item>
        <item name="startIconDrawable">@drawable/ic_email_gray</item>
        <item name="startIconContentDescription">@string/desc_image_email</item>
    </style>

    <!-- FormInputText -->
    <style name="NanumSquareRoundB.FormInputText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/light_black2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- FormInputEditText -->
    <style name="FormInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_black2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>

    <style name="FormInputEditText.Password">
        <item name="android:inputType">textPassword|textNoSuggestions</item>
    </style>

    <style name="FormInputEditText.Email">
        <item name="android:inputType">textEmailAddress|textNoSuggestions</item>
    </style>

    <style name="FormInputEditText.Disabled">
        <item name="android:textColor">@color/gray</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- Login Button -->
    <style name="LoginButton" parent="NanumSquareRoundB">
        <item name="android:text">@string/button_login</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Exit Button -->
    <style name="ImageButton">
        <item name="android:paddingStart">@dimen/horizontal_spacing_30dp</item>
        <item name="android:paddingEnd">@dimen/horizontal_spacing_10dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Vertical Line -->
    <style name="VerticalLine" parent="NanumSquareRoundB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_black2</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">|</item>
    </style>

    <style name="TextButtonAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/nanum_square_round_b</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Select Box -->
    <style name="SelectBox" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_black2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">130dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/ic_select_box</item>
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
    </style>

</resources>