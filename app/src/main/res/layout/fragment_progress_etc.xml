<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.gongmanse.app.model.Progress" />

        <variable
            name="item"
            type="Progress" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/layout_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Body -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <!-- 학년 -->
                    <LinearLayout
                        android:id="@+id/layout_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toStartOf="@+id/layout_unit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="true"
                            app:cardBackgroundColor="@color/main_color"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="1dp"
                            app:strokeColor="@color/main_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/SelectBoxTextViewBasics"
                                    android:id="@+id/tv_select_grade"
                                    android:paddingVertical="5dp"
                                    android:text="@string/content_format_selected_grade_all"
                                    tools:text="모든 학년" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    tools:ignore="InefficientWeight">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:adjustViewBounds="true"
                                        android:contentDescription="@string/content_description_image_arrow"
                                        android:src="@drawable/ic_down_arrow"
                                        tools:ignore="TooDeepLayout" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- 단원 -->
                    <LinearLayout
                        android:id="@+id/layout_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/layout_grade"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="true"
                            app:cardBackgroundColor="@color/main_color"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="1dp"
                            app:strokeColor="@color/main_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/SelectBoxTextViewBasics"
                                    android:id="@+id/tv_select_unit"
                                    android:paddingVertical="5dp"
                                    android:text="@string/content_format_selected_unit_all"
                                    tools:text="모든 단원" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    tools:ignore="InefficientWeight">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:adjustViewBounds="true"
                                        android:contentDescription="@string/content_description_image_arrow"
                                        android:src="@drawable/ic_down_arrow" />

                                </LinearLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_etc_list"
                    bindProgress="@{item.data}"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:visibility="@{item.data.size() > 0 ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_select"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:listitem="@layout/item_progress"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/layout_empty"
                    layout="@layout/layout_empty"
                    android:visibility="@{item.data.size() > 0 ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@id/layout_select"
                    tools:visibility="visible" />

                <!-- Body -->
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>