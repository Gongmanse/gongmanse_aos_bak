<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.gongmanse.app.model.QNADetail" />

        <variable
            name="item"
            type="QNADetail" />

        <variable
            name="totalNum"
            type="Integer" />

        <variable
            name="title"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- Header -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/content_description_image_category_dismiss"
            android:src="@drawable/ic_popup_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/NanumSquareRoundEB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@{title}"
            android:textColor="@color/light_black2"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_popup_question"
            app:layout_constraintBottom_toBottomOf="@id/btn_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_close"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="9dp"
            android:background="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- Footer -->
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_select_all"
                style="@style/NanumSquareRoundB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:text="@string/content_button_select_all"
                android:textColor="@color/light_black2"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/btn_select_remove"
                style="@style/NanumSquareRoundB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:text="@string/content_button_select_remove"
                android:textColor="@color/light_black2"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Contents -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/layout_contnet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1">

            <TextView
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_format_video_count1"
                android:textColor="@color/light_black2"
                android:textSize="14sp" />

            <TextView
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@{item.totalNum != null ? String.valueOf(item.totalNum) : @string/content_text_rating_value_null}"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                tools:text="3" />

            <TextView
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_format_video_count3"
                android:textColor="@color/light_black2"
                android:textSize="14sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_contnet"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintBottom_toTopOf="@id/layout_buttons"
            app:layout_constraintTop_toBottomOf="@id/layout_header">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                bindQNADetail="@{item.data}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="@{item.data.size() > 0 ? View.VISIBLE : View.GONE}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_sheet_qna"
                tools:visibility="visible" />

            <include
                android:id="@+id/layout_empty"
                layout="@layout/layout_empty"
                android:visibility="@{item.data.size() > 0 ? View.GONE : View.VISIBLE}"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
