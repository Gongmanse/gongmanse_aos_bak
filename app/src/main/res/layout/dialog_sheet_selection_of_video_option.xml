<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="9dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_image_category_dismiss"
            android:src="@drawable/ic_popup_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            style="@style/NanumSquareRoundEB"
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="9dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/light_black2"
            android:textSize="14sp"
            android:text="@string/content_title_video_option"
            app:drawableStartCompat="@drawable/ic_popup_option"
            app:layout_constraintTop_toTopOf="@id/btn_close"
            app:layout_constraintBottom_toBottomOf="@id/btn_close"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="9dp"
            android:background="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/tv_header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/view_divider">

            <TextView
                style="@style/NanumSquareRoundB"
                android:id="@+id/btn_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:textColor="@color/light_black2"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:drawableStartCompat="@drawable/ic_popup_caption"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="15dp"
                android:background="@color/light_gray" />

            <TextView
                style="@style/NanumSquareRoundB"
                android:id="@+id/btn_play_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:drawablePadding="5dp"
                android:textColor="@color/light_black2"
                android:textSize="14sp"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:drawableStartCompat="@drawable/ic_popup_play_speed"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
