<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="title" type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MyActiveActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="5dp"
                app:contentInsetStart="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/btn_close"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="25dp"
                        android:paddingEnd="10dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:layout_marginEnd="0dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/content_description_image_close"
                        app:srcCompat="@drawable/ic_back_arrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:visibility="visible"/>

                    <TextView
                        style="@style/NanumSquareRoundEB"
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_black2"
                        android:textSize="17sp"
                        android:text="@{title}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="제목"/>

                    <ImageView
                        android:id="@+id/btn_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:layout_marginEnd="0dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/content_description_image_close"
                        app:srcCompat="@drawable/ic_delete_thing"
                        app:tint="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:visibility="visible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Tabs Menu -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabMinWidth="0dp"
            app:tabMode="fixed"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            app:tabBackground="@drawable/selector_tab_indicator"
            app:tabIndicator="@android:color/transparent"
            app:tabSelectedTextColor="@color/main_color"
            app:tabTextColor="@color/black"
            app:tabTextAppearance="@style/NanumSquareRoundB.TabLayout2"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar"/>

        <!-- Contents -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
