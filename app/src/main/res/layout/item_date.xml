<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.graphics.Color"/>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.gongmanse.app.model.ScheduleData"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_title"
            style="@style/NanumSquareRoundB"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:gravity="center"
            bindDateText="@{data.date}"
            android:textColor="@color/date_color_num"
            android:textSize="20sp"
            bindDateColor="@{data.date}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.133"
            tools:text="1" />
        <View
            android:id="@+id/red_dot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:visibility="@{data.description.size() > 0 ? View.VISIBLE : View.GONE}"
            android:elevation="1dp"
            android:background="@color/week_color_sun"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>