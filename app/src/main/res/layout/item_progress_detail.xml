<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.graphics.Color" />
        <import type="android.view.View" />
        <variable name="video" type="com.gongmanse.app.model.VideoData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{video.thumbnail == null ? View.GONE : View.VISIBLE}"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_view"
                bindURLImage="@{video.thumbnail}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_image_preview" />

            <FrameLayout
                android:id="@+id/fl_video_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/cv_preview"
                app:layout_constraintEnd_toEndOf="@id/cv_preview"
                app:layout_constraintTop_toTopOf="@id/cv_preview"
                app:layout_constraintBottom_toBottomOf="@id/cv_preview">

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:use_controller="false"
                    app:controller_layout_id="@layout/custom_video_timebar"
                    app:show_buffering="when_playing"
                    app:surface_type="surface_view"
                    app:auto_show="true"
                    app:resize_mode="fit"
                    app:rewind_increment="10000"
                    app:fastforward_increment="10000"
                    android:visibility="invisible"/>
            </FrameLayout>

            <TextView
                style="@style/NanumSquareRoundB.Subtitles"
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:background="@color/black_50"
                android:bufferType="spannable"
                android:layout_gravity="bottom"
                android:visibility="invisible"/>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_exo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btn_back,exo_caption,exo_mute"
            android:visibility="invisible"/>

        <View
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_round_dim"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="@id/exo_caption"
            app:layout_constraintBottom_toBottomOf="@id/exo_caption"
            app:layout_constraintStart_toStartOf="@id/exo_mute"
            app:layout_constraintEnd_toEndOf="@id/exo_caption"/>

        <ImageButton
            android:id="@+id/exo_caption"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_small_caption_on"
            android:elevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="4dp"/>

        <ImageButton
            android:id="@+id/exo_mute"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="@id/exo_caption"
            app:layout_constraintEnd_toStartOf="@id/exo_caption"
            android:elevation="6dp"
            android:src="@drawable/ic_small_volume_off"
            android:background="?android:attr/selectableItemBackground"/>

        <TextView
            style="@style/NanumSquareRoundB"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{video.title}"
            android:textColor="@color/light_black2"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cv_preview"
            tools:text="시의 표현법(변화주ㅇㅇㅇㅇㅇㅇㅇ" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <TextView
                android:id="@+id/tv_subject"
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@{video.subjectColor == null ? @color/main_color : Color.parseColor(@string/content_format_subject_background(video.subjectColor))}"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:paddingVertical="4dp"
                android:text="@{video.subject}"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:background="@color/black"
                tools:text="국어" />

        </androidx.cardview.widget.CardView>

        <!-- 라벨 목록 : 추가사항 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_unit"
            bindUnitColor="@{video.unit}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:visibility="@{video.unit.empty ? View.GONE : View.VISIBLE}"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintStart_toEndOf="@id/cv_subject"
            app:layout_constraintTop_toTopOf="@id/cv_subject"
            tools:cardBackgroundColor="@color/black">

            <TextView
                style="@style/NanumSquareRoundB"
                bindUnit="@{video.unit}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:ignore="SmallSp"
                tools:text="화학" />

        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/NanumSquareRoundB"
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{video.rating != null &amp;&amp; video.rating.empty ? String.valueOf(Float.parseFloat(video.rating)) : @string/content_text_rating_value_null}"
            android:textColor="@color/light_black2"
            android:textSize="15sp"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/cv_subject"
            app:layout_constraintBottom_toBottomOf="@id/cv_subject"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="5.0" />

        <TextView
            style="@style/NanumSquareRoundB"
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:textColor="@color/light_black2"
            android:textSize="14sp"
            android:text="@{@string/content_format_teacher_name(video.teacherName)}"
            app:layout_constraintTop_toTopOf="@id/cv_subject"
            app:layout_constraintBottom_toBottomOf="@id/cv_subject"
            app:layout_constraintEnd_toStartOf="@id/tv_rating"
            tools:text="박상준 선생님" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>