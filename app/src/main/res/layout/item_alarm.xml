<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="data" type="com.gongmanse.app.model.AlarmData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_toolbar">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@{@string/content_format_alarm_title(data.sTitle)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[공지사항]" />

        <TextView
            style="@style/NanumSquareRoundB"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            alarmDate="@{data.dtDateCreated}"
            app:layout_constraintBottom_toBottomOf="@id/tv_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_type"
            tools:text="2021.01.22" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/NanumSquareRoundB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/light_black2"
            android:textSize="14sp"
            android:text="@{data.sBody}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type"
            app:layout_constraintEnd_toStartOf="@+id/tv_time"
            tools:text="공만세 회원 공지" />


        <TextView
            android:id="@+id/tv_time"
            style="@style/NanumSquareRoundB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            alarmTime="@{data.dtDateCreated}"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            tools:text="오후 14:55" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>