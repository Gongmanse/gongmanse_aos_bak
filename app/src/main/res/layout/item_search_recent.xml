<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="serach"
            type="com.gongmanse.app.model.SearchRecentListData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_timeline"
                android:contentDescription="@string/content_nav_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/nanum_square_round_b"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="2sp"
                android:singleLine="true"
                android:text="@{serach.keyword}"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_recent"
                app:layout_constraintEnd_toStartOf="@+id/tv_date"
                app:layout_constraintStart_toEndOf="@+id/iv_recent"
                app:layout_constraintTop_toTopOf="@+id/iv_recent"
                tools:text="검색어1" />

            <TextView
                android:id="@+id/tv_date"
                bindRecentSearchDate="@{serach.created_date}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/txt_dark_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_recent_keyword_delete"
                app:layout_constraintRight_toLeftOf="@+id/iv_recent_keyword_delete"
                app:layout_constraintTop_toTopOf="@+id/iv_recent_keyword_delete"
                tools:text="21.02.15" />

            <ImageView
                android:id="@+id/iv_recent_keyword_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_popup_close"
                android:contentDescription="@string/content_description_image_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>