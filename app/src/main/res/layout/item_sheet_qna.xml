<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="data" type="com.gongmanse.app.model.QNADetailData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp"
        android:paddingVertical="10dp">

        <CheckBox
            style="@style/NanumSquareRoundB"
            android:id="@+id/cb_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingStart="13dp"
            android:paddingEnd="0dp"
            android:button="@drawable/selector_checkbox_qna"
            android:maxLines="2"
            android:ellipsize="end"
            android:checked="@{data.remove}"
            android:textSize="15sp"
            android:textColor="@color/light_black2"
            bindRemoveMarkUpQNA="@{data.question}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_answer"
            tools:text="질문이 두 줄 이상인 경우에는 이렇게 표시하게 됩니다 아 아 아 아 아 아 아 아 아메리카노 맛있다..." />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@{data.answer == null ? @color/gray : @color/main_color}"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintEnd_toEndOf="parent"
            tools:cardBackgroundColor="@color/gray">

            <TextView
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="7dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="@{data.answer == null ? @string/content_text_wait : @string/content_text_apply}"
                tools:text="@string/content_text_wait"
                tools:ignore="SmallSp" />

        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/NanumSquareRoundB"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="10sp"
            bindToDate="@{data.dtRegister}"
            app:layout_constraintTop_toBottomOf="@id/cv_answer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10초 전"
            tools:ignore="SmallSp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
