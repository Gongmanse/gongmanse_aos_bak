<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/content_description_image_category_dismiss"
        android:src="@drawable/ic_popup_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawablePadding="10dp"
        android:text="@string/content_format_selected_alarm_title"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        app:drawableStartCompat="@drawable/ic_schedule_alarm"
        app:drawableTint="@color/black" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="9dp"
        android:background="@color/main_color"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_empty"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_empty"
            app:layout_constraintEnd_toStartOf="@+id/tv_empty"
            app:layout_constraintTop_toTopOf="@id/tv_empty" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_empty"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_on_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/divider2">

        <TextView
            android:id="@+id/tv_on_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_on_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            app:layout_constraintTop_toTopOf="@id/tv_on_time"
            app:layout_constraintBottom_toBottomOf="@id/tv_on_time"
            app:layout_constraintRight_toLeftOf="@id/tv_on_time"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_on_time"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/divider3">

        <TextView
            android:id="@+id/tv_before_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm2"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/iv_before_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            app:layout_constraintTop_toTopOf="@id/tv_before_ten"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_ten"
            app:layout_constraintRight_toLeftOf="@id/tv_before_ten"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_ten"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider4">

        <TextView
            android:id="@+id/tv_before_thirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm3"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_before_thirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_thirty"
            app:layout_constraintRight_toLeftOf="@id/tv_before_thirty"
            app:layout_constraintTop_toTopOf="@id/tv_before_thirty" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_thirty"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider5">

        <TextView
            android:id="@+id/tv_before_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm4"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_before_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_hour"
            app:layout_constraintRight_toLeftOf="@id/tv_before_hour"
            app:layout_constraintTop_toTopOf="@id/tv_before_hour" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_hour"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_three_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider6">

        <TextView
            android:id="@+id/tv_before_three_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm5"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_before_three_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_three_hour"
            app:layout_constraintRight_toLeftOf="@id/tv_before_three_hour"
            app:layout_constraintTop_toTopOf="@id/tv_before_three_hour" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_three_hour"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_twelve_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider7">

        <TextView
            android:id="@+id/tv_before_twelve_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm6"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_before_twelve_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_twelve_hour"
            app:layout_constraintRight_toLeftOf="@id/tv_before_twelve_hour"
            app:layout_constraintTop_toTopOf="@id/tv_before_twelve_hour" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_twelve_hour"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider8">

        <TextView
            android:id="@+id/tv_before_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm7"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_before_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_day"
            app:layout_constraintRight_toLeftOf="@id/tv_before_day"
            app:layout_constraintTop_toTopOf="@id/tv_before_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_day"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_before_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider9">

        <TextView
            android:id="@+id/tv_before_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_alarm8"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_before_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_before_week"
            app:layout_constraintRight_toLeftOf="@id/tv_before_week"
            app:layout_constraintTop_toTopOf="@id/tv_before_week" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_before_week"/>

</androidx.constraintlayout.widget.ConstraintLayout>