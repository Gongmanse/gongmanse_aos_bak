<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.graphics.Color"/>
        <import type="android.view.View" />
        <variable
            name="search"
            type="com.gongmanse.app.model.VideoData"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <!-- 썸네일 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView3"
                bindURLImage="@{search.thumbnail}"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_image_counsel_preview"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/cv_preview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_preview"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 과목 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@{Color.parseColor(@string/content_text_subject_color(search.subjectColor))}"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/NanumSquareRoundB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="5dp"
                    android:text="@{search.subject}"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    tools:ignore="SmallSp"
                    tools:text="과학" />

            </androidx.cardview.widget.CardView>


            <!-- unit -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardUseCompatPadding="false"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="5dp"
                android:visibility="@{search.unit.empty ? View.GONE : View.VISIBLE}"
                bindUnitColor="@{search.unit}"
                app:cardBackgroundColor="@{Color.parseColor(@string/content_text_subject_color(search.subjectColor))}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_subject">

                <TextView
                    style="@style/NanumSquareRoundB"
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    bindUnit="@{search.unit}"
                    tools:text="용어"
                    tools:ignore="SmallSp" />

            </androidx.cardview.widget.CardView>


            <!-- 제목 -->
            <TextView
                android:id="@+id/tv_title"
                style="@style/NanumSquareRoundB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{search.title}"
                android:textColor="@color/light_black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_subject"
                tools:text="일정 성분비 법칙" />

            <!-- 담당 선생님 -->
            <TextView
                android:id="@+id/tv_teacher_name"
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@{@string/content_text_teacher_name(search.teacherName)}"
                android:textColor="@color/light_black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:text="고광윤 선생님" />


            <!-- 평점 -->
            <TextView
                android:id="@+id/tv_grade"
                style="@style/NanumSquareRoundB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{search.rating != null &amp;&amp; !search.rating.empty ? String.valueOf(Float.parseFloat(search.rating)) : @string/content_text_rating_value_null}"
                android:textColor="@color/light_black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="SmallSp"
                tools:text="5.0" />

            <!-- 별 아이콘 -->
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/content_description_image_star"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@id/tv_grade"
                app:layout_constraintEnd_toStartOf="@id/tv_grade"
                app:layout_constraintTop_toTopOf="@id/tv_grade" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>