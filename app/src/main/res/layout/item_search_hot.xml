<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="search"
            type="com.gongmanse.app.model.SearchHotListData" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_number"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_b"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="14sp"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                bindKeywordsIdCast="@{search.id}"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_search_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nanum_square_round_b"
            android:letterSpacing="-0.04"
            android:text="@{search.keyword}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/cv_number"
            app:layout_constraintStart_toEndOf="@+id/cv_number"
            app:layout_constraintTop_toTopOf="@+id/cv_number"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="고구려" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>