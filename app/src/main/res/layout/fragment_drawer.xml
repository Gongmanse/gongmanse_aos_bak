<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <import type="com.gongmanse.app.BuildConfig" />
        <variable name="data" type="com.gongmanse.app.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/tv_app_version"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 닫기 버튼 -->
                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/content_description_image_close"
                    android:focusable="true"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_close" />

                <include
                    android:id="@+id/layout_profile"
                    layout="@layout/layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btn_close"
                    app:user="@{data}" />

                <!-- 선 -->
                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="23dp"
                    android:background="@color/main_color"
                    app:layout_constraintTop_toBottomOf="@id/layout_profile" />

                <!-- 메뉴 목록 -->
                <LinearLayout
                    android:id="@+id/layout_menu_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/view_divider">

                    <TextView
                        android:id="@+id/btn_my_active"
                        style="@style/NanumSquareRoundB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="@string/content_button_my_active"
                        android:textColor="@color/light_black2"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_my_activity" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />

                    <TextView
                        android:id="@+id/btn_my_schedule"
                        style="@style/NanumSquareRoundB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="@string/content_button_my_schedule"
                        android:textColor="@color/light_black2"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_my_schedule" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />

                    <TextView
                        android:id="@+id/btn_what_s_gongmanse"
                        style="@style/NanumSquareRoundB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="@string/content_button_what_s_gongmanse"
                        android:textColor="@color/light_black2"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_what_s_gongmanse" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />

                    <TextView
                        android:id="@+id/btn_notice"
                        style="@style/NanumSquareRoundB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="@string/content_button_notice"
                        android:textColor="@color/light_black2"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_notice" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />

                    <TextView
                        android:id="@+id/btn_help_center"
                        style="@style/NanumSquareRoundB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="@string/content_button_help_center"
                        android:textColor="@color/light_black2"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_help_center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />

                    <TextView
                        android:id="@+id/btn_settings"
                        style="@style/NanumSquareRoundB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="@string/content_button_settings"
                        android:textColor="@color/light_black2"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_settings" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tv_app_version"
            style="@style/NanumSquareRoundEB"
            bindAppVersion="@{BuildConfig.VERSION_NAME}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@id/layout_terms_of_service"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            tools:text="앱 버전" />

        <LinearLayout
            android:id="@+id/layout_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_terms_of_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:text="@string/content_button_terms_of_service"/>

            <TextView
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/dark_gray"
                android:textSize="13sp"
                android:text="@string/content_button_privacy"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>