<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/content_description_image_done"
            app:srcCompat="@drawable/ic_verified"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_done_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/nanum_square_round_eb"
            android:textColor="@color/light_black2"
            android:textSize="22sp"
            android:text="@string/content_text_done_title"
            android:letterSpacing="-0.04"
            app:layout_constraintTop_toBottomOf="@id/iv_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/tv_done_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:fontFamily="@font/nanum_square_round_b"
            android:textColor="@color/dark_gray"
            android:textSize="13sp"
            android:text="@string/content_text_done_contents"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="7sp"
            app:layout_constraintTop_toBottomOf="@id/tv_done_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UnusedAttribute" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_go_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/main_color"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_done_contents"
            app:layout_constraintStart_toStartOf="@id/tv_done_contents"
            app:layout_constraintEnd_toEndOf="@id/tv_done_contents">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:gravity="center"
                android:fontFamily="@font/nanum_square_round_b"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="@string/content_button_main"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
