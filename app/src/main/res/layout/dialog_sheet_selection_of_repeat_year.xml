<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/content_description_image_category_dismiss"
        android:src="@drawable/ic_popup_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:drawablePadding="10dp"
        android:text="@string/content_format_selected_repeat_title_year"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        app:drawableTint="@color/black"
        app:drawableStartCompat="@drawable/ic_schedule_repeat" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="9dp"
        android:background="@color/main_color"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_month_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1">

        <TextView
            android:id="@+id/tv_month_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_repeat3"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_month_day"
            app:layout_constraintRight_toLeftOf="@id/tv_month_day"
            app:layout_constraintTop_toTopOf="@id/tv_month_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/btn_month_day"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_month_week_of_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/divider5">

        <TextView
            android:id="@+id/tv_month_week_of_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_format_selected_repeat4"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/content_description_image_category_check"
            android:src="@drawable/ic_popup_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_month_week_of_day"
            app:layout_constraintRight_toLeftOf="@id/tv_month_week_of_day"
            app:layout_constraintTop_toTopOf="@id/tv_month_week_of_day" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>