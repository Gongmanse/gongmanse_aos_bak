<?xml version="1.0" encoding="utf-8"?>
<!--suppress DeprecatedClassUsageInspection -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.gongmanse.app.model.NoteCanvasData"/>
        <variable name="item" type="NoteCanvasData"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <com.gongmanse.app.utils.BackgroundView
                    android:id="@+id/canvas_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.gongmanse.app.utils.GraphicView
                    android:id="@+id/canvas_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            style="@style/NanumSquareRoundB"
            android:id="@+id/btn_canvas_show"
            android:layout_width="68dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/background_right_half_round"
            android:focusable="true"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/content_button_canvas_show"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <SlidingDrawer
            android:id="@+id/sliding"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:rotation="180"
            android:content="@id/content"
            android:handle="@id/handle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioGroup
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:background="@color/main_color"
                android:orientation="horizontal"
                android:checkedButton="@id/rb_1"
                android:gravity="bottom"
                android:rotation="180">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:button="@null"
                    android:text="@null"
                    android:background="@drawable/selector_radio_button_red_pencils"/>

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:button="@null"
                    android:text="@null"
                    android:background="@drawable/selector_radio_button_green_pencils"/>

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:button="@null"
                    android:text="@null"
                    android:background="@drawable/selector_radio_button_blue_pencils"/>

                <RadioButton
                    android:id="@+id/rb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:button="@null"
                    android:text="@null"
                    android:background="@drawable/selector_radio_button_eraser"/>

            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/handle"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_left_half_round"
                android:rotation="180">

                <TextView
                    style="@style/NanumSquareRoundB"
                    android:id="@+id/handle_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="@string/content_button_canvas_menu"/>

                <ImageView
                    android:id="@+id/handle_open"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:visibility="invisible"
                    android:contentDescription="@string/content_description_image_close_canvas"
                    android:src="@drawable/ic_double_arrow"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </SlidingDrawer>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>